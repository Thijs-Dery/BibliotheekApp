<Window x:Class="BibliotheekApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bibliotheek App" Height="450" Width="400">
    <Grid Margin="10">
        <StackPanel VerticalAlignment="Center">
            <Button Content="Boeken Toevoegen" Width="200" Margin="10" Click="BoekenToevoegen_Click"/>
            <Button Content="Auteurs Toevoegen" Width="200" Margin="10" Click="AuteursToevoegen_Click"/>
            <Button Content="Gebruikers Toevoegen" Width="200" Margin="10" Click="GebruikersToevoegen_Click"/>
            <Button Content="Lijst met Boeken" Width="200" Margin="10" Click="LijstBoeken_Click"/>
            <Button Content="Lijst met Gebruikers" Width="200" Margin="10" Click="LijstGebruikers_Click"/>
            <Button Content="Lijst met Auteurs" Width="200" Margin="10" Click="LijstAuteurs_Click"/>
        </StackPanel>
    </Grid>
</Window>

