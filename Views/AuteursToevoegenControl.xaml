<UserControl x:Class="BibliotheekApp.Views.AuteursToevoegenControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="378" Width="218">
    <Grid Margin="0,0,0,-82">
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" />

        <StackPanel Margin="0,20,10,109">
            <Label Content="Naam:"/>
            <TextBox x:Name="NaamTextBox" Margin="0,0,0,10"/>

            <Label Content="Geboorte Datum:"/>
            <DatePicker x:Name="GeboorteDatumPicker" Margin="0,0,0,10"/>

            <Button Content="Voeg Auteur Toe" Click="VoegAuteurToe_Click" Margin="0,10,0,0" Height="37"/>
            <Button Content="Sluit" Click="Sluit_Click" Width="100" Margin="5"/>
        </StackPanel>
    </Grid>
</UserControl>

