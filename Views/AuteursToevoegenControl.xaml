<UserControl x:Class="BibliotheekApp.Views.AuteursToevoegenControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="300" Width="400">
    <Grid Margin="0,0,0,-82">
        <StackPanel Margin="20">
            <Label Content="Naam:"/>
            <TextBox x:Name="NaamTextBox" Margin="0,0,0,10"/>

            <Label Content="Geboorte Datum:"/>
            <DatePicker x:Name="GeboorteDatumPicker" Margin="0,0,0,10"/>

            <Button Content="Voeg Auteur Toe" Click="VoegAuteurToe_Click" Margin="0,10,0,0" Height="20"/>
            <Button Content="Terug" Width="100" Click="Terug_Click" Margin="0,20,0,0" Height="23"/>
        </StackPanel>
    </Grid>
</UserControl>

