<UserControl x:Class="BibliotheekApp.Views.LedenToevoegenControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="300" Width="272">
    <Grid Height="375" VerticalAlignment="Top">
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Margin="0,0,0,83" />

        <StackPanel Margin="20,20,20,83">
            <Label Content="Naam:"/>
            <TextBox x:Name="NaamTextBox" Margin="0,0,0,10"/>

            <Label Content="Geboorte Datum:"/>
            <DatePicker x:Name="GeboorteDatumPicker" Margin="0,0,0,10"/>

            <Button Content="Voeg Lid Toe" Click="VoegLidToe_Click" Margin="0,10,0,0" Height="31"/>
            <Button Content="Sluit" Click="Sluit_Click" Width="100" Margin="5"/>
        </StackPanel>
    </Grid>
</UserControl>


