<UserControl x:Class="BibliotheekApp.Views.BoekenToevoegenControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="300" Width="400">
    <Grid Margin="0,0,0,-82">
        <StackPanel Margin="20">
            <Label Content="Titel:"/>
            <TextBox x:Name="TitelTextBox" Margin="0,0,0,10"/>

            <Label Content="Genre:"/>
            <TextBox x:Name="GenreTextBox" Margin="0,0,0,10"/>

            <Label Content="Publicatie Datum:"/>
            <DatePicker x:Name="PublicatieDatumPicker" Margin="0,0,0,10"/>

            <Label Content="Auteur ID:"/>
            <TextBox x:Name="AuteurIDTextBox" Margin="0,0,0,10"/>

            <Label Content="ISBN:"/>
            <TextBox x:Name="ISBNTextBox" Margin="0,0,0,10"/>

            <Button Content="Voeg Boek Toe" Click="VoegBoekToe_Click" Margin="0,10,0,0" Height="20"/>
            <Button Content="Terug" Width="100" Click="Terug_Click" Margin="0,20,0,0" Height="23"/>
        </StackPanel>
    </Grid>
</UserControl>

